<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Criar Pensamentos</a>
    </div>
    <h3>Seus Pensamentos </h3>
    <ul>
        {{#each toughts}}
        <li>
            <span class="label">{{this.title}}</span>
            <span class="actions">
                <a class="btn" href="/toughts/edit/{{this.id}}" >Editar</a>
                <form action="/toughts/delete" method="POST">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="submit" value="Exluir" class="btn">
                </form>
            </span>
        </li>
        {{/each}}
    </ul>
    {{#if emptyToughts}}
    <p>Ainda não há Pensamentos, <a href="/toughts/add">crie agora!</a></p>
    {{/if}}
</div>