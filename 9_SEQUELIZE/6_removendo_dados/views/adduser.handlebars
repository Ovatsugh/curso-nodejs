<div class="form-container">
        <h1>Adicione um usuário</h1>
        <form action="/users/create" method="POST" class="custom-form">
            <div class="form-control">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="name" placeholder="Digite o nome do usuário">
            </div>

            <div class="form-control">
                <label for="occupation">Ocupação:</label>
                <input type="text" id="occupation" name="occupation" placeholder="Digite a ocupação do usuário">
            </div>

            <div class="form-control form-checkbox">
                <label for="newsletter">Enviar Promoções?</label>
                <input type="checkbox" id="newsletter" name="newsletter" checked>
                
            </div>

            <input type="submit" value="Cadastrar">
        </form>
    </div>