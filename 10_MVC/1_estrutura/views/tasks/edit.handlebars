<div class="container">
    <div id="add-task-form"> <!-- Adicionando um ID exclusivo -->
        <h1>Editar a Task: <span class="tittle">{{data.title}}</span></h1>
        <form action="/tasks/edit" method="POST">
            <div class="form-group">
                <input type="hidden" name="id" value="{{data.id}}">
                <label for="title">Title:</label><br>
                <input type="text" id="title" name="title" required value="{{data.title}}"><br>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <br>
                <textarea id="description" name="description" rows="4" required>{{data.description}}</textarea><br>
            </div>
            <button type="submit">Editar Task</button>
        </form>
    </div>
</div>